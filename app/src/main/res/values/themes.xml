<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Competition" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/layout_background</item>
        <item name="colorPrimaryVariant">@color/dark_layout_background</item>
        <item name="colorOnPrimary">@color/title</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/title</item>
        <item name="colorSecondaryVariant">@color/text</item>
        <item name="colorOnSecondary">@color/dark_layout_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="dialogCornerRadius">60dp</item>
    </style>
</resources>